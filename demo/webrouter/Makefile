TESTS = test/*.js
REPORTER = spec
TIMEOUT = 10000
MOCHA_OPTS =

test:
	$NODE_ENV=test DEBUG=webrouter:* ~/.nvm/v0.10.26/bin/mocha \
	--reporter $(REPORTER) \
	--time $(TIMEOUT) \
	$(MOCHA_OPTS) \
	$(TESTS)

test-cov:
	@$(MAKE) test MOCHA_OPTS='--require blanket' REPORTER=html-cov > coverage.html

test-all: test test-cov

.PHONY: test

